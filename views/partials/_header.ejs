<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-secondary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if(users) { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group">
            <h5 style="margin-bottom:0; margin-right: 5px;">Logged In As: <%= users.email %></h5>
            <button type="submit" class="btn btn-light">Logout</button>
          </div>
        </form>
      <% } else { %>
          <div class="form-group" style="margin-bottom: 0; margin-right: 5px; float: left;">
            <a class="nav-item nav-link btn btn-outline-light" href = "/login">Login</a>
          </div>
          <div class="form-group" style="margin-bottom: 0; float: left;">
            <a class="nav-item nav-link btn btn-outline-light" href = "/register">Register</a>
          </div>
      <% } %>
    </div>
  </nav> 
</header>